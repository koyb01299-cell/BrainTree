{
  "compilerOptions": {
    /* -------------------------------------------------------------
     * 기본 컴파일러 설정
     * Vue 3 + TypeScript + Vite 환경에서 가장 안정적이고
     * 엔터프라이즈 규모 코드베이스에 적합한 구성
     * ------------------------------------------------------------- */

    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* -------------------------------------------------------------
     * 모듈/해석 관련
     * ------------------------------------------------------------- */
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    /* -------------------------------------------------------------
     * JSX (사용 안함)
     * ------------------------------------------------------------- */
    "jsx": "preserve",

    /* -------------------------------------------------------------
     * 소스맵 / 파일 관련
     * ------------------------------------------------------------- */
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* -------------------------------------------------------------
     * Strict 모드: 엔터프라이즈급에서 필수
     * ------------------------------------------------------------- */
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "useDefineForClassFields": true
  },

  /* ---------------------------------------------------------------
   * include / exclude
   * --------------------------------------------------------------- */
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
